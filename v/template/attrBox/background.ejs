<details data-type="background">
    <summary>背景</summary>
    <div class="item">
        <label>图片地址:</label>
        <input type="text" style="width: 200px;" value="<%= data.background.image %>" data-type="image">
    </div>
    <div class="item">
        <label>左偏移:</label>
        <select data-type="type">
            <option value="no-repeat" <% if(data.background.type == 'no-repeat'){ %> selected <%}%>>不平铺</option>
            <option value="repeat-x" <% if(data.background.type == 'repeat-x'){ %> selected <%}%>>横向平铺</option>
            <option value="repeat-y" <% if(data.background.type == 'repeat-y'){ %> selected <%}%>>纵向平铺</option>
        </select>
    </div>
    <div class="item">
        <label>图片位置:</label>
        <input type="text" placeholder="x" value="<%= data.background.x %>" data-type="x">
        <input type="text" placeholder="y" value="<%= data.background.y %>" data-type="y">
    </div>
    <div class="item">
        <label>颜色:</label>
        <input type="text" value="<%= data.background.color %>"  data-type="color">
        <input type="color"  class="inputColor">
    </div>

</details>